<div class="mx-5">
  <form class="login-form">
    <div class="mb-3">
      <label for="email-login" class="form-label text">Email:</label>
      <input type="email" class="form-control" id="email-login" aria-describedby="emailHelp">
      <div id="emailHelp" class="form-text text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3">
      <label for="password-login" class="form-label text">Password:</label>
      <input type="password" class="form-control" id="password-login">
    </div>

    <button type="submit" class="btn2 btn btn-primary text">Login</button>

  </form>

  <form class="signup-form">
    <div class="mb-3">
      <label for="username-signup" class="form-label text">Username:</label>
      <input type="text" class="form-control" id="username-signup" />
    </div>
    <div class="mb-3">
      <label for="email-signup" class="form-label text">Email:</label>
      <input type="text" class="form-control" id="email-signup" />
    </div>
    <div>
      <label for="password-signup" class="form-label text">Password:</label>
      <input type="password" class="form-control" id="password-signup" />
    </div>
    <div>

      <button type="submit" class="btn2 btn btn-primary text">Signup</button>

    </div>
  </form>
</div>

<script src="javascript/login.js"></script>